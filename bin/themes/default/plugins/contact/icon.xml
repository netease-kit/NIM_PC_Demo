<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window>
    <OptionBox width="44" height="44" halign="center" mousechild="false" cursortype="hand" margin="0,0,0,10" >
		<Control name="icon" bkimage="../main/icon_tab_user_unselected.png" valign="top" halign="center" width="16" height="16" margin="0,4,0,0" /> 
		<Label name="name" textid="STDID_PLUGIN_NAME_FRIEND" font="1" halign="center" margin="0,0,0,4" valign="bottom" normaltextcolor="lightcolor"/>
		<Event type="select" receiver=".\icon" applyattribute="bkimage=&quot;../main/icon_tab_user_selected.png&quot;"/>
        <Event type="unselect" receiver=".\icon" applyattribute="bkimage=&quot;../main/icon_tab_user_unselected.png&quot;"/>
		<Event type="select" receiver=".\name" applyattribute="normaltextcolor=&quot;bk_main_wnd_title&quot;"/>
        <Event type="unselect" receiver=".\name" applyattribute="normaltextcolor=&quot;lightcolor&quot;"/>
    </OptionBox>
</Window>