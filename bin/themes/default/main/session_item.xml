<?xml version="1.0" encoding="UTF-8"?>
<Window>
    <ListContainerElement class="listitem" normalcolor="bk_wnd_lightcolor" height="60">
        <HBox padding="9,0,10,0" mouse="false">
            <Box width="auto" height="auto" valign="center" mouse="false">
				<ButtonBox name="head_image" width="38" height="38" borderround="38,38" margin="1,1,0,0" cursortype="hand"/>
				<Button class="icon_headimage_mask_40x40" name="head_image_mask" mouse="false"/>
            </Box>
            
            <HBox margin="10,0,0,0" mouse="false" mousechild="false">
                <VBox width="stretch">
                    <Control />
					<Label name="label_name" width="stretch" font="2"/>                
                    <HBox height="auto" margin="0,4,0,0" mouse="false" mousechild="false">
                        <Label name="online_state" width="auto" font="1" normaltextcolor="lightcolor"/>
						<Label name="at_me_label" textid="STRID_SESSION_SOMEONE_AT_ME" visible="false" width="auto" valign="center" margin="0,0,4,0" normaltextcolor="link_red" font="1"/> 
                    	<Label name="label_msg" width="stretch" font="1" normaltextcolor="lightcolor"/>
					</HBox>
                    <Control />
                </VBox>
                <VBox width="50" minwidth="50" margin="0,0,5,0">
                    <Control />
                    <Label name="label_time" halign="center" normaltextcolor="lightcolor"/>
					<HBox width="45" height="26" margin="0,4,0,0" halign="center">
						<Control />
						<Control name="not_disturb" height="15" width="13" margin="0,0,0,0" valign="center" bkimage="../public/icon/not_disturb.png" visible="false"/>
						<Box name="box_unread" width="26" height="auto" margin="4,0,0,0" padding="0,2,0,4" halign="center" bkimage="file='icon_number.png' corner='8,7,8,7'">
							<Label name="label_unread" halign="center" normaltextcolor="white"/>
						</Box>
						<Control />
					</HBox>
                    <Control />
                </VBox>
            </HBox>
        </HBox>
        <Control class="splitline_hor_level1" name="split_line" valign="bottom"/>
    </ListContainerElement>
</Window>
